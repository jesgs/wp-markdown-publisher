{% extends "layouts/admin.twig" %}

{% block body %}
    <h2>Markdown Publisher</h2>

    <hr>

    <h3>Information</h3>
    <table>
        <tbody>
            <tr>
                <th align="left" width="160">Plugin Name</th>
                <td align="left">Markdown Publisher</td>
            </tr>
            <tr>
                <th align="left" width="160">Version</th>
                <td align="left">0.0.1</td>
            </tr>
        </tbody>
    </table>

    <h3>Description</h3>
    <p>
        Lorem Ipsem
    </p>

    <h3>Publish</h3>

    Pull all changes from Git repository and publish to WordPress.

    <div class="wrap">
        <form method="post" action="{{ publishUrl }}">
            <input type="submit" class="button-primary" value="Publish Now"/>
        </form>
    </div>

    <h3>Settings</h3>

    <div class="wrap">
        <form method="post" action="options.php">
            {{settingsFormHiddenMarkup|raw}}
            <table class="form-table">
                {{settingsFormFieldMarkup|raw}}
            </table>
            <p class="submit">
                <input type="submit" class="button-primary" value="Save Changes" />
            </p>
        </form>
    </div>

{% endblock %}
